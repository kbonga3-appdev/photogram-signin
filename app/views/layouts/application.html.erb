  <body>

  <nav>
  <ul>
  <li>
    <a href="/user_sign_in">User SignIn</a>
  </li>
  <li>
    <a href="/user_sign_up">User SignUp</a>
  </li>
  <li>
    <a href="/user_sign_out">User Out</a>
  </li>
  <li>
    <a href="/users">Users</a>
  </li>
  <li>
    <a href="/photos">Photos</a>
  </li>
  <li>
    <%= session.fetch(:user_id) %>
  </li>

  </ul>
  </nav>

<% if notice.present? %>
<div class= "alert alert-success" role="alert"> 
<%= notice %>
</div>
<% end %>

<% if alert.present? %>
<div class= "alert alert-warning" role="alert" >
  <%= alert %>
</div>
<% end %>

    <%= yield %>
  </body>
</html>
